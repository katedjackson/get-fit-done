{
    "name": "idkfitbit",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Blocks pages based on fitbit data to encourage user to move around",
    "browser_action":{
      "default_title": "Get Fit Done",
      "default_popup" :  "popup/src/index.html"
    },
    "options_ui": {
        "page": "options/src/index.html",
        "chrome_style": true,
        "open_in_tab": true
    },

    "background": {
      "scripts": [
        "background/background.js"
      ]
    },

    "permissions": [
        "webRequest",
        "tabs",
        "http://*/*",
        "https://*/*",
        "webRequestBlocking",
        "storage"
    ],


    "web_accessible_resources": [
        "background/src/index.html"
    ]
}
