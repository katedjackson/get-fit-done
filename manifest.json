{
  "name": "get-fit-done",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Blocks pages based on fitbit data to encourage user to move around",
  "background": {
    "scripts": [
        "background.js"
    ]
  },
  "browser_action":{
    "default_title": "Get Fit Done",
    "default_popup" :  "popup/src/index.html"
  },
  "options_ui": {
    "page": "options/src/index.html",
    "chrome_style": true,
    "open_in_tab": true
  },
  "permissions": [
    "webRequest",
    "tabs",
    "http://*/*",
    "https://*/*",
    "webRequestBlocking",
    "storage"
  ],
  // Adding https://www.gstatic.com/ to the external scripts authorized domains so we can import the firebase JS SDK and access the Realtime Database as well as Firebase Storage.
  "content_security_policy":"script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'",
  "oauth2": {
    "client_id": "847708992152-i8rm3oo10nunblb0mganj7lk99i7m8ec.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "key": ""
}

