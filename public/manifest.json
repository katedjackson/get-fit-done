{
    "name": "idkfitbit",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Blocks pages based on fitbit data to encourage user to move around",
    "icons": {
        "16": "icon.png"
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true,
        "open_in_tab": true
    },

    "permissions": [
        "webRequest",
        "tabs",
        "http://*/*",
        "https://*/*",
        "webRequestBlocking",
        "storage"
    ]
}
